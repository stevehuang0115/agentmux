{
  "display_information": {
    "name": "Crewly",
    "description": "AI Team Orchestrator"
  },
  "features": {
    "bot_user": {
      "display_name": "Crewly",
      "always_online": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "files:read",
