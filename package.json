{
  "name": "agentmux",
  "version": "1.0.0",
  "type": "module",
  "description": "AgentMux orchestrates multiple Claude Code instances via tmux sessions",
  "main": "dist/cli/index.js",
  "bin": {
    "agentmux": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend && npm run build:mcp && npm run build:cli",
    "build:backend": "tsc -p backend/tsconfig.json",
    "build:frontend": "cd frontend && npm run build",
    "build:mcp": "tsc -p mcp-server/tsconfig.json",
    "build:cli": "tsc -p cli/tsconfig.json",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:mcp\"",
    "dev:backend": "nodemon --exec \"node --loader ts-node/esm\" backend/src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mcp": "nodemon --exec \"node --loader ts-node/esm\" mcp-server/src/index.ts",
    "start": "node dist/cli/index.js start",
    "start:pm2": "pm2 start ecosystem.config.js",
    "stop:pm2": "pm2 stop ecosystem.config.js",
    "restart:pm2": "pm2 restart ecosystem.config.js",
    "reload:pm2": "pm2 reload ecosystem.config.js",
    "logs:pm2": "pm2 logs",
    "monit:pm2": "pm2 monit",
    "docker:build": "docker build -t agentmux .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 agentmux",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.11.0",
    "chalk": "^5.3.0",
    "chokidar": "^3.5.3",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "node-pty": "^1.0.0",
    "open": "^9.1.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0",
    "ws": "^8.14.2",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/node": "^20.5.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "@types/ws": "^8.5.5",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "playwright": "^1.55.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "claude-code",
    "tmux",
    "automation",
    "orchestration",
    "mcp"
  ],
  "author": "",
  "license": "MIT"
}
