{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@backend/*": ["backend/src/*"],
      "@mcp/*": ["mcp-server/src/*"],
      "@cli/*": ["cli/src/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": [
    "backend/src/**/*",
    "mcp-server/src/**/*",
    "cli/src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "frontend",
    "tests"
  ]
}